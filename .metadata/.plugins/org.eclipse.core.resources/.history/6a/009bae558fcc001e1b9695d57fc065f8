<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ page session="false"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>MyPage</title>
</head>

<body>
    <h1>MyPage</h1>

    <!-- 세션에 로그인 정보가 있을 때만 내용 표시 -->
    <c:if test="${not empty sessionScope.login}">
        <p>안녕하세요, ${sessionScope.login.m_name}님!</p>
        <!-- 기타 회원 정보를 출력하거나 수정할 수 있는 내용 추가 -->

        <!-- 로그아웃 버튼 -->
        <form action="logout" method="get">
            <input type="submit" value="로그아웃">
        </form>
    </c:if>

    <!-- 세션에 로그인 정보가 없을 때 -->
    <c:if test="${empty sessionScope.login}">
        <p>로그인이 필요합니다.</p>
        <!-- 로그인 화면으로 이동하는 링크 등을 추가 -->
    </c:if>
</body>
</html>