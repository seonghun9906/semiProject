package com.icia.drawAcademy;


import java.util.List;

import javax.servlet.http.HttpSession;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestPart;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import com.icia.drawAcademy.Service.MemberService;
import com.icia.drawAcademy.dto.MemberDto;

import lombok.extern.slf4j.Slf4j;


@Controller
@Slf4j
public class HomeController {
	
	@Autowired
	private MemberService mServ;
	
	@GetMapping("/")
	public String home() {
		log.info("home()");
		
		return "SignUp";
	}
	
	@PostMapping("signUpProc")
	public String signUpProc(MemberDto memberDto,
									HttpSession session,
									RedirectAttributes rttr) {
		log.info("signUpProc()");
		String view = mServ.signUp(memberDto, session, rttr);
	
		return view;
	}
	
}
