<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icia.drawAcademy.dao.Qboarddao.CmtDao">
   <insert id="insertCmt" parameterType="CmtDTO">
      INSERT INTO cmt
      (c_contents, b_code, m_id, m_name)
      VALUES (#{c_contents}, #{b_code}, #{m_id}, #{m_name})
   </insert>

   <select id="getCommentList" resultType="CmtDTO" >
      SELECT * FROM clist WHERE b_code=#{b_code}
   </select>
   
   <delete id="deleteMemCmt" parameterType="Integer" >
      DELETE FROM cmt WHERE m_id = #{m_id} AND c_code = #{c_code}
   </delete>
   

</mapper>